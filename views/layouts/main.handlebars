<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{ page.title }} | Mkamla.com</title>
		<meta charset="UTF-8" />

		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

		<meta name="description" content="{{page.description}}" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">

		<meta name="theme-color" content="#1b182d">
		<link rel="manifest" href="/manifest.json" />

		<link rel="shortcut icon" href="/images/favicon.png">
		<link rel="icon" sizes="192x192" href="/images/icon_192.png">
		<link rel="apple-touch-icon" href="/images/icon_192.png">
		{{!-- IE Tiles --}}
		<link rel="msapplication-square70x70logo" href="/images/icon_70.png">
		<link rel="msapplication-square150x150logo" href="/images/icon_150.png">
		<link rel="msapplication-square310x310logo" href="/images/icon_310.png">
		<link rel="msapplication-wide310x150logo" href="/images/icon_310x150.png">

		{{!-- Apple Menu bar--}}
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
		<meta name="apple-mobile-web-app-capable" content="yes">


		{{#if locals.showTests}}
		<link rel="stylesheet" type="text/css" href="/vendor/mocha.css" />
		{{/if}}

		{{#if page.prefetch}}
		{{#each page.prefetch}}
		<link rel="prefetch" href="{{this}}" />
		{{/each}}
		{{/if}}

		{{#if dependencies.css}}
		{{#each dependencies.css}}
		<link rel="stylesheet" type="text/css" href="{{this}}" />
		{{/each}}
		{{/if}}

		<link rel="stylesheet" type="text/css" href="/css/main.css" />
		{{#if jsGlobal}}
		<script type="text/javascript">
			{{#each jsGlobal}}
				var {{{@key}}} = {{{this}}};
			{{/each}}
		</script>
		{{/if}}

		{{#if dependencies.js}}
		{{#each dependencies.js}}
		<script type="text/javascript" src="{{this}}"></script>
		{{/each}}
		{{/if}}
	</head>
