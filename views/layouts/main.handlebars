		<main class="content">
			<div class="tool-bar mod-12">
			{{#if breadcrumbs}}
				<ul class="breadcrumb">		
				{{#each breadcrumbs as |breadcrumb|}}
					{{#unless @first}}
					<li class="breadcrumbs">
						<a class="breadcrumb" href="{{breadcrumb.url}}">
							<span class="page-title">{{breadcrumb.name}}</span>
						</a>
					</li>
					{{/unless}}
				{{/each}}
				</ul>
			{{/if}}
			</div>
			{{{body}}}
		</main>			
		{{#if locals.showTests}}
		<script type="text/javascript" src="/vendor/mocha.js"></script>
		<script type="text/javascript" src="/vendor/chai.js"></script>
		<script type="text/javascript">
			mocha.ui('tdd');
			var assert = chai.assert;
		</script>
		
		<script type="text/javascript" src="/qa/globalTests.js"></script>

			{{#if pageTestScript}}
			<script type="text/javascript" src="{{pageTestScript}}"></script>
			{{/if}}

		<script type="text/javascript">
			mocha.run();
		</script>
		{{/if}}
	</body>